
<% layout('layout/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campground/new">Create New Campground</a>
    
        <% for (let camp of campground) {%>
       <div class="card mb-3">
        <div class="row">
            <div class=col-md-4>
                <img class="img-fluid" src="<%=camp.image%>"></img>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=camp.title%></h5>
                    <p class="card-text"><%=camp.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=camp.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/campground/<%=camp.id%>">View <%=camp.title%></a>
                </div>
            </div>
        </div>
    </div>
        
            <%}%>
    
